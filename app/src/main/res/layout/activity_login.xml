<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.runtracer.LoginActivity"
              android:clickable="true"
              android:background="@android:color/holo_orange_dark"
              android:showDividers="middle|beginning|end"
              android:visibility="visible">
	<!-- Login progress -->
	<ProgressBar
		android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
		android:layout_width="wrap_content"
		android:layout_height="20dp"
		android:layout_marginBottom="8dp"
		android:visibility="gone"
		android:layout_weight="1"/>

	<ScrollView
		android:id="@+id/login_form" android:layout_width="320dp"
		android:layout_height="140dp"
		android:clickable="true"
		style="@android:style/DeviceDefault.ButtonBar"
		android:background="@android:color/holo_orange_dark"
		android:layout_weight="1"
		android:layout_marginTop="12sp">

		<LinearLayout
			android:id="@+id/email_login_form"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="@android:color/holo_orange_dark"
			android:visibility="visible">

			<AutoCompleteTextView
				android:id="@+id/email"
				android:layout_width="match_parent"
				android:layout_height="28sp"
				android:hint="@string/prompt_email"
				android:inputType="textEmailAddress"
				android:typeface="sans"
				android:textStyle="bold"
				android:textSize="18sp"
				android:textIsSelectable="true"
				android:textAlignment="center"
				android:background="@android:color/background_light"
				android:textColorHighlight="#b3fe03"
				android:clickable="true"
				android:editable="true"
				android:enabled="true"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:layout_gravity="center"
				android:layout_marginTop="12sp"/>

			<EditText
				android:id="@+id/password"
				android:layout_width="match_parent"
				android:layout_height="28sp"
				android:hint="@string/prompt_password"
				android:inputType="textPassword"
				android:imeActionId="@+id/login"
				android:imeActionLabel="@string/action_sign_in_short"
				android:imeOptions="actionUnspecified"
				android:maxLines="1"
				android:singleLine="true"
				android:background="@android:color/background_light"
				android:textColorHighlight="#b3fe03"
				android:textSize="18sp"
				android:textIsSelectable="true"
				android:textAlignment="center"
				android:textStyle="bold"
				android:typeface="sans"
				android:clickable="true"
				android:editable="true"
				android:enabled="true"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:layout_gravity="center"
				android:layout_marginTop="8sp"/>

			<Button
				android:id="@+id/email_sign_in_button"
				android:layout_width="match_parent"
				android:layout_height="48sp"
				android:text="@string/action_sign_in"
				android:textStyle="bold"
				android:typeface="sans"
				android:visibility="visible"
				android:singleLine="false"
				android:enabled="false"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:clickable="true"
				android:background="@android:color/holo_blue_dark"
				style="@android:style/ButtonBar"
				android:textSize="18sp"
				android:textAlignment="center"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:layout_gravity="top|bottom"
				android:layout_marginTop="20sp"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
